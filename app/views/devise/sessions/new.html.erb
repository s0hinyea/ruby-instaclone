<div class="form-container" style="max-width: 400px; margin: 50px auto; text-align: center;">
  <h2>Log In</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form" }) do |f| %>
    <div class="form-group" style="margin-bottom: 15px;">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="form-group" style="margin-bottom: 15px;">
      <%= f.label :password, class: "form-label" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-group" style="margin-bottom: 15px;">
        <%= f.check_box :remember_me, class: "form-check-input" %>
        <%= f.label :remember_me, class: "form-check-label" %>
      </div>
    <% end %>

    <div class="form-actions" style="margin-top: 20px;">
      <%= f.submit "Log In", class: "btn btn-primary" %>
    </div>
  <% end %>

  <div class="form-links" style="margin-top: 20px;">
    <%= render "devise/shared/links" %>
  </div>
</div>
